<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/cities_forecast_constraint_layout_list_item">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_middle"
        style="@style/vertical_guideline"
        app:layout_constraintGuide_percent="0.6"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="0dp"/>

    <ImageView
        android:id="@+id/weather_icon"
        style="@style/cities_forecast_image_view_list_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_cloudy" />

    <TextView
        android:id="@+id/city_text_view"
        style="@style/cities_forecast_city_text_view_list_item"
        app:layout_constraintBottom_toBottomOf="@+id/weather_desctiption_text_view"
        app:layout_constraintEnd_toStartOf="@+id/horizontal_middle"
        app:layout_constraintStart_toEndOf="@+id/weather_icon"
        app:layout_constraintTop_toTopOf="@+id/weather_icon"
        tools:text="New York:" />

    <TextView
        android:id="@+id/max_temp_text_view"
        style="@style/cities_forecast_max_temp_text_view_list_item"
        app:layout_constraintBottom_toBottomOf="@+id/city_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/city_text_view"
        app:layout_constraintTop_toTopOf="@+id/city_text_view"
        tools:text="12"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        style="@style/horizontal_guideline"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/weather_desctiption_text_view"
        style="@style/cities_forecast_description_text_view_list_item"
        tools:text="Cloudy"
        app:layout_constraintEnd_toEndOf="@+id/weather_icon"
        app:layout_constraintStart_toStartOf="@+id/weather_icon"
        app:layout_constraintTop_toBottomOf="@+id/weather_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>