<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/cities_forecast_constraint_layout_main_list_item">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_middle"
        style="@style/vertical_guideline"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="0dp"/>

    <TextView
        android:id="@+id/coldest_city_label_text_view"
        style="@style/cities_forecast_coldest_city_label_text_view_main_list_item"
        app:layout_constraintEnd_toEndOf="@id/horizontal_middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coldest_city_text_view"
        style="@style/cities_forecast_coldest_city_text_view_main_list_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/coldest_city_label_text_view"
        app:layout_constraintStart_toStartOf="@+id/coldest_city_label_text_view"
        app:layout_constraintTop_toBottomOf="@+id/coldest_city_label_text_view"
        tools:text="Warsaw" />

    <TextView
        android:id="@+id/lowest_temp_label_text_view"
        style="@style/cities_forecast_lowest_temp_label_text_view_main_list_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/horizontal_middle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lowest_temp_text_view"
        style="@style/cities_forecast_lowest_temp_text_view_main_list_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lowest_temp_label_text_view"
        app:layout_constraintStart_toStartOf="@+id/lowest_temp_label_text_view"
        app:layout_constraintTop_toBottomOf="@+id/lowest_temp_label_text_view"
        tools:text="-27" />


</androidx.constraintlayout.widget.ConstraintLayout>