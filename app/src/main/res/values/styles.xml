<?xml version="1.0" encoding="utf-8"?>
<resources>

    // cities list item styles
    <style name="cities_forecast_constraint_layout_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">@dimen/double_padding</item>
        <item name="android:paddingEnd">@dimen/double_padding</item>
        <item name="android:paddingBottom">@dimen/cities_forecast_constraint_layout_padding_bottom</item>
    </style>

    <style name="cities_forecast_image_view_list_item">
        <item name="android:layout_width">@dimen/cities_forecast_image_view_width</item>
        <item name="android:layout_height">@dimen/cities_forecast_image_view_height</item>
        <item name="android:layout_marginTop">@dimen/single_margin</item>
        <item name="android:contentDescription">@string/weather_icon</item>
    </style>

    <style name="cities_forecast_city_text_view_list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/cities_forecast_city_text_view_list_item_margin_start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="cities_forecast_max_temp_text_view_list_item" parent="cities_forecast_city_text_view_list_item"/>

    // cities main list item styles

    <style name="cities_forecast_constraint_layout_main_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="cities_forecast_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/double_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="cities_forecast_coldest_city_label_text_view_main_list_item" parent="cities_forecast_label">
        <item name="android:text">@string/coldest_city_label</item>
    </style>

    <style name="cities_forecast_lowest_temp_label_text_view_main_list_item" parent="cities_forecast_label">
        <item name="android:text">@string/lowest_temp_label</item>
    </style>

    <style name="cities_forecast_coldest_city_text_view_main_list_item" parent="cities_forecast_label">
        <item name="android:layout_marginBottom">@dimen/double_margin</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="cities_forecast_lowest_temp_text_view_main_list_item" parent="cities_forecast_coldest_city_text_view_main_list_item"/>

    <style name="cities_forecast_description_text_view_list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="horizontal_guideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="vertical_guideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    // extra detail styles

    <style name="extra_detail_text_view_list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/double_margin</item>
        <item name="android:layout_marginBottom">@dimen/double_margin</item>
    </style>

    <style name="extra_detail_city_text_view_main_list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/double_margin</item>
        <item name="android:textSize">@dimen/extra_detail_city_text_size</item>
    </style>

    <style name="extra_detail_weather_icon_main_list_item">
        <item name="android:layout_width">@dimen/extra_detail_weather_icon_width</item>
        <item name="android:layout_height">@dimen/extra_detail_weather_icon_height</item>
        <item name="android:layout_marginTop">@dimen/single_margin</item>
        <item name="android:contentDescription">@string/weather_icon</item>
    </style>

    <style name="extra_detail_weather_description_text_view_main_list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="extra_detail_highest_temp_text_view_main_list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/single_margin</item>
        <item name="android:textSize">@dimen/extra_detail_highest_temp_text_size</item>
    </style>

    <style name="extra_detail_lowest_temp_text_view_main_list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/extra_detail_lowest_temp_text_size</item>
    </style>

    // recycler view style

    <style name="recycler_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/single_padding</item>
    </style>

    <style name="recycler_view_empty_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/recycler_empty_view</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="recycler_view_progress_bar">
        <item name="android:layout_width">@dimen/recycler_view_progress_bar_width</item>
        <item name="android:layout_height">@dimen/recycler_view_progress_bar_height</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>